//- username text input, pw text input, submit button 'sign in' and cancel
//- redirects to lists view with welcome flash message


extends layout

block main
  form(action="/users/signin" method="post")
      dl
        dt
          label(for="username") Username:
        dd
          input(type="text"
                id="username"
                name="username"
                placeholder="username"
                value=username)

        dt
          label(for="password") Password:
        dd
          input(type="password"
                id="password"
                name="password"
                placeholder="password")

      fieldset.actions
        input(type="submit" value="Save")

block signin